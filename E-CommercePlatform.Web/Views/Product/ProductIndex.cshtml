<!-- 数据源 -->
@model List<E_CommercePlatform.Shared.ProductUserViewModel>

<!-- 视图标题 -->
@{
    ViewBag.Title = "商 品 展 示";
}

@Html.Partial("~/Views/Client/Shared/_SloganPartial.cshtml")

<section id="products" class="section">
    <!-- 标题 -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>特 色 商 品</h2>
                    <span>看看都有哪些热门商品吧~</span>
                </div>
            </div>
        </div>
    </div>

    <!-- 商品容器 -->
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <!-- 商品1 -->
                <div class="col-lg-4">
                    <div class="item">
                        <div class="thumb">
                            <div class="hover-content">
                                <ul>
                                    <li><a href="single-product.html"><i class="fa fa-eye"></i></a></li>
                                    <li><a href="single-product.html"><i class="fa fa-star"></i></a></li>
                                    <li><a href="single-product.html"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <img src="@product.ImageUrl" class="img-thumbnail" alt="未加载图片">
                        </div>

                        <div class="down-content">
                            <h4>@product.Name</h4>
                            <span>@product.Description</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<hr />

<style>
    .thumb img {
        width: 100%; /* 或者指定宽度如 200px */
        height: 300px; /* 统一高度 */
        object-fit: cover; /* 保持比例填满容器 */
    }
</style>